<p style="color: green"><%= notice %></p>
<h3><%= Coin.model_name.human %> <%= link_to t('links.new'), new_coin_path, class: "btn btn-primary btn-sm" %></h3>
<h5><%= cookies[:curso] %></h5>
<h5><%= session[:curso] %></h5>
<div id="coins">
  <table class="table">
    <thead>
      <tr>
        <th scope="col"><%=Coin.human_attribute_name(:id)%></th>
        <th scope="col"><%=Coin.human_attribute_name(:description)%></th>
        <th scope="col"><%=Coin.human_attribute_name(:acronym)%></th>
        <th scope="col"><%=Coin.human_attribute_name(:url_image)%></th>
        <th scope="col"><%=Coin.human_attribute_name(:mining_type)%></th>
        <th scope="col"><%= "#{t('action')}" %></th>
      </tr>
    </thead>
    <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.id %></td>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, width: 25, height: 25 %></td>
        <td><%= coin.mining_type.acronym %></td>
        <td><%= link_to t('links.show'), coin %></td>
      </tr> 
    <% end %>
    </tbody>
  </table>
</div>

